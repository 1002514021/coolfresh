<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="http://at.alicdn.com/t/font_1150685_p2u0ulgrejc.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/details.css">
</head>

<body>
    <%-include('common/header.ejs')%>
    <ul id="breadcrumb">
        <li class="referrer"><a href=""></a></li>
        <li class="active">商品详情</li>
    </ul>
    <div id="details" style="width:100%">
        <div class="leftBar">
            <div class="bigSlideBox">
                <img src="../images/<%=goodInfo[0].image%>">
            </div>
            <div class="smallSlideBox">
                <div class="smallSlide">
                    <ul class="imgUl">
                        <%goodImages.forEach((item)=>{%>
                            <li><img src="../images/<%=item.goodImage%>"></li>
                        <%})%>
                    </ul>
                </div>
                <span name='pre' class="slideBtn pre iconfont icon-leftarrow"></span>
                <span name='next' class="slideBtn next iconfont icon-rightarrow"></span>
            </div>

        </div>
        <div class="rightBar">
            <h3 class="quickview_gname"><%=goodInfo[0].goodName%></h3>
            <div class="priceBar">
                <div>价格：</div>
                <div class="prices">
                    <div class="price-original"><%=goodInfo[0].originalPrice%></div>
                    <div class="price-preferential"><%=goodInfo[0].price%></div>
                </div>
            </div>
            <div class="good-describe"><%=goodInfo[0].presentation%></div>
            <div class="nutrition">
                <span>所含营养成分：</span>
                <span><%=goodInfo[0].nutritions%></span>
            </div>
            <div class="marketTime" style="margin-bottom:2%">
                <span>售卖时间：</span>
                <span class="putaway sellTime"><%=goodInfo[0].startTime%></span>
                <span>到</span>
                <span class="soldOut sellTime"><%=goodInfo[0].endTime%></span>
            </div>
            <div class='purchaseParas'>
                <div class="measuringUnit" style="font-size:12px;margin-bottom:5%">
                    <span>计量单位：</span>
                    <span class="unit"><%=goodInfo[0].measuringUnit%></span>
                </div>
                <div class="choosePurchaseNum">
                    <span class="chooseNumTitle">数量：</span>
                    <div class="chooseNum">
                        <input class="customNum" type="text" value="1">
                        <div class="optBtnBar">
                            <div class="optBtn minus">-</div>
                            <div class="optBtn add">+</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="purchaseOpts">
                <div class="tocart optItem inSell">
                    <span class="iconfont icon-tubiaozhizuomoban"></span>
                    加入购物车
                </div>
                <div name='<%=goodInfo[0].goodId%>' class="tocheckout optItem inSell">
                    <span class="iconfont icon-yijiangoumai"></span>
                    立即购买
                </div>
                <div onclick="appointment(<%=goodInfo[0].goodId%>)" class="optItem unSell" style="display:none">
                        <span class="iconfont icon-banshuiyuyue"></span>
                        立即预约
                </div>
            </div>
            <div class="share">
                <span class="shareTitle">分享到：</span>
                <div class="shareObj">
                    <span class="iconfont icon-weixin"></span>
                    <!-- <span class="iconfont icon-weixin"></span> -->
                </div>
            </div>
        </div>
    </div>
    <div id="detail-otherBar">
            <div id="relatedGoods">
                <div class="relatedGoods-title">热门推送</div>
                <div class="relatedGoodsBox">
                    <%sellGood.forEach((item)=>{%>
                        <a href="details?goodId=<%=item.goodId%>" class="relatedGoodBox">
                                <div class="relatedGoodImgBox">
                                        <img src="../images/<%=item.image%>" alt="">
                                </div>
                                <div class="relatedGoodPara">
                                    <div class="relatedGoodName"></div>
                                    <div class="relatedGoodPrice">￥<%=item.price%></div>
                                </div>
                            </a>
                   <% })%>
                </div>
            </div>
            <div id="otherInfo">
                <div class="otherInfoTabs">
                    <span class='graphic_detailsTab'>图文详情</span>
                    <span class='good_commentsTab'>评论</span>
                </div>
                <div class="graphic_details">
                    <img src="../images/<%=goodInfo[0].googGraphic%>" alt="">
                </div>
                <div class="good_comments">
                    <div class="noComment">
                        <div style="text-align:center">
                            暂无评论
                        </div>
                    </div>
                    <%comments.forEach((item)=>{%>
                        <div class="good_comment_box">
                        <div class="good_comment_title">
                            <div class="stars ">
                                <%for(let i=0;i<item.starnum;i++){%>
                                    <span class="star iconfont icon-star"></span>
                                <%}%>
                            </div>
                            <div>
                                <span class="commentator"><%=item.uName%></span>
                                <span class="commentTime"><%=new Date(item.commentTime).toLocaleDateString()%></span>
                            </div>
                        </div>
                        <p class="comment"><%=item.comment%></p>
                    </div>
                    <%})%>
                </div>
            </div>
    </div>
    </div>
    <%-include('common/message.ejs')%>
    <%-include('common/footer.ejs')%>
    <script src="http://www.jq22.com/jquery/jquery-1.10.2.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous">
        </script>
    <script type="text/javascript" src='js/jquery-ui.min.js'></script>
    <script src="../js/message.js"></script>
    <script src="../js/details.js"></script>
    <script src="../js/common.js"></script>
</body>

</html>